<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="mysql.User" table="user" schema="test" lazy="false">
        <id name="id">
            <column name="id" sql-type="int(8)"/>
            <generator class="increment"/>
        </id>

        <property name="name">
            <column name="name" sql-type="varchar(25)" length="25"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int(3)"/>
        </property>
        <property name="admin">
            <column name="isAdmin" sql-type="bit(1)"/>
        </property>
        <property name="createDate">
            <column name="createDate" sql-type="timestamp"/>
        </property>
    </class>
</hibernate-mapping>